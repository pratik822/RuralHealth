<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:text="Date "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/dateTxt"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1.40"
                    android:background="@drawable/edittext_shape"
                    android:hint="Select Date"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/bw_light_black"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/dateIco"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/calendar" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                android:text="Name of MSW "
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvMSWDisti"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.40"
                android:background="@drawable/edittext_shape"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Select MSW"
                android:textColorHint="@color/bw_light_black"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                android:text="Villages Attented "
                android:textSize="24dp" />

            <LinearLayout
                android:id="@+id/llVillage"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.40"
                android:background="@drawable/edittext_shape"
                android:orientation="horizontal"
                android:weightSum="2">

                <AutoCompleteTextView
                    android:id="@+id/tvVillages"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.80"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:hint="Select Village/Pada"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/bw_light_black"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/ivVillage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:background="@mipmap/dropdown_arrow" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_shape">

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:divider="@null"
                android:dividerHeight="0dp">

            </ListView>

        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>


</LinearLayout>