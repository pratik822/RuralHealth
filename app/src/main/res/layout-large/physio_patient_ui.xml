<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:text="SWP No "
            android:textColor="@color/black"
            android:textSize="22sp" />

        <AutoCompleteTextView
            android:id="@+id/autoSWPNo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:background="@drawable/edittext_shape"
            android:hint="Auto pickup from DB"
            android:paddingLeft="10dp"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:text="Name of Patient "
            android:textColor="@color/black"
            android:textSize="22sp" />

        <AutoCompleteTextView
            android:id="@+id/autoPatientName"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:background="@drawable/edittext_shape"
            android:hint="Auto pickup from registration"
            android:paddingLeft="10dp"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:text="Age"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/edtAge"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:background="@drawable/edittext_shape"
            android:gravity="center_vertical"
            android:hint="31"
            android:paddingLeft="10dp"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.60"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/maleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Male"
                    android:textSize="22sp" />

                <RadioButton
                    android:id="@+id/FemaleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="FeMale"
                    android:textSize="22sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.60"
            android:text="Villages/Padas"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvVillages"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:background="@drawable/edittext_shape"
            android:gravity="center_vertical"
            android:hint="Select Village/Pada"
            android:paddingLeft="10dp"
            android:textSize="22sp" />

        <!--<LinearLayout
            android:id="@+id/llVillage"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:background="@drawable/edittext_shape"
            android:orientation="horizontal"
            android:weightSum="2">

            <AutoCompleteTextView
                android:id="@+id/autoVillages"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.80"
                android:gravity="center_vertical"
                android:hint="Select Village/Pada"
                android:background="@drawable/edittext_shape"
                android:paddingLeft="10dp"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/ivVillageSpinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:background="@mipmap/dropdown_arrow" />

        </LinearLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.60"
            android:text="Name of Physiotherepist "
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvPhysiotherepist"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:background="@drawable/edittext_shape"
            android:gravity="center_vertical"
            android:hint="Physiotherepist Name"
            android:paddingLeft="10dp"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.60"
            android:text="Pain Score "
            android:textColor="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/bw_light_black"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@color/bw_light_black"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@color/bw_light_black"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnFour"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@color/bw_light_black"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@color/bw_light_black"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:text="Exercise/Advice"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edtAdvice"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.40"
            android:background="@drawable/edittext_shape"
            android:hint="Provide Advice"
            android:paddingLeft="10dp"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>